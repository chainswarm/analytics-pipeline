# Execution Mode
# Options: 'daily' (runs celery beat), 'on-demand' (runs api server)
ANALYTICS_EXECUTION_MODE=on-demand

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# ClickHouse Connection
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=password1234
CLICKHOUSE_DATABASE=default
# Base DB for connection, pipeline creates analytics_{network}

# Celery Configuration
# Use REDIS_URL for unified config or split if needed
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Ingestion Configuration
# Source type: S3, CLICKHOUSE, or HTTP
INGESTION_SOURCE_TYPE=S3

# S3 Ingestion Settings
# Required:
INGESTION_S3_BUCKET=your-bucket-name
# Optional (for public buckets, leave credentials empty):
INGESTION_S3_ENDPOINT=https://s3.amazonaws.com
INGESTION_S3_REGION=us-east-1
# Only needed for private buckets:
# INGESTION_S3_ACCESS_KEY=your-access-key
# INGESTION_S3_SECRET_KEY=your-secret-key